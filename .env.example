# Edge Agent Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Both EDGE_SECRET and REGISTRATION_TOKEN are REQUIRED

# ============================================================
# REQUIRED VARIABLES
# ============================================================

# Shared secret for HMAC authentication (must match backend)
# Generate a secure random string: openssl rand -hex 32
EDGE_SECRET=your_shared_secret_here

# Registration token for initial backend registration
# Obtain this from your backend administrator
REGISTRATION_TOKEN=your_registration_token_here

# ============================================================
# OPTIONAL VARIABLES (override config.yaml values)
# ============================================================

# Backend URL
# BACKEND_URL=https://archety-backend.onrender.com

# User phone number (E.164 format recommended)
# USER_PHONE=+15551234567

# Path to iMessage database (defaults to standard macOS location)
# IMESSAGE_DB_PATH=/Users/yourusername/Library/Messages/chat.db

# Enable/disable WebSocket for real-time command delivery (true/false)
# WEBSOCKET_ENABLED=true

# Message polling interval in seconds (how often to check for new iMessages)
# MESSAGE_POLL_INTERVAL=2

# Command sync interval in seconds (HTTP fallback when WebSocket unavailable)
# COMMAND_SYNC_INTERVAL=60

# Performance profile: balanced, low-latency, or low-resource
# PERFORMANCE_PROFILE=balanced
